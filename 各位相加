#include <stdio.h>

#include <stdlib.h>

#include <string.h>

int addDigits(int num) {

	char a[100];

	int i, sum = 0;

	sprintf(a, "%d", num);

	int len;

	len = strlen(a);

	while (len > 1)
	{
		sum = 0;

		for (i = 0; i < len; i++)
		{
			sum = sum + a[i] - '0';
		}
		sprintf(a, "%d", sum);

		len = strlen(a);

	}
	return a[0] - '0';
}
